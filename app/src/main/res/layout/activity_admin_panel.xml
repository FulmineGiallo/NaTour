<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PannelloAdmin.AdminPanel">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="293dp"
        android:layout_height="34dp"
        android:text="Pannello Amministratore"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="163dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginStart="8dp"
        android:text="log out"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottonelogout"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_area_utente"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_area_utente"
        android:layout_width="208dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="16dp"
        android:text="Area utente"
        android:textSize="18sp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_numero_foto"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:text="Visualizza numero foto"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_numero_segnalazioni"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_numero_segnalazioni"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:text="Visualizza numero segnalazioni"
        android:textSize="18sp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_numero_itinerari"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_numero_itinerari"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:text="Visualizza numero itinerari"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_numero_recensioni"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_numero_recensioni"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:text="Visualizza numero recensioni"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_numero_richerche"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_numero_richerche"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:text="Visualizza numero di richerche"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_numero_accessi"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_utenti_registrati"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="24dp"
        android:elevation="10dp"
        android:text="Visualizza Utenti registrati"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_numero_accessi"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="90dp"
        android:text="Visualizza numero di accessi"
        android:textSize="18dp"
        app:backgroundTint="@color/colorebottone"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_utenti_registrati"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>