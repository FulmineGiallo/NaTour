<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edt_emailReg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.RegisterActivity.Register"
        android:background="@color/colorebottone">

        <ImageView
            android:id="@+id/img_logoReg"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo_natour_v2" />

        <ImageView
            android:id="@+id/img_regconfermata"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_logoReg"
            app:srcCompat="@drawable/ic_ok" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_reg"
        android:text="Registrazione Completata"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/img_regconfermata"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="20dp"

        />
        <ImageView
            android:id="@+id/img_gufo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/owl"
            app:layout_constraintTop_toBottomOf="@id/txt_reg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>