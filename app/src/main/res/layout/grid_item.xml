<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:focusable="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="7dp"
        app:strokeColor="@color/black"
        app:strokeWidth="0.5dp"
        android:padding="5dp"
        android:layout_marginTop="4dp"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="7dp" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/homepage_difficolta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width= "15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/ic_ellipse_155"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dp"
        android:elevation="2dp"
        android:layout_marginBottom="14dp"
        />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@id/homepage_difficolta"
        app:layout_constraintBottom_toBottomOf="@id/homepage_difficolta"
        app:layout_constraintLeft_toLeftOf="@id/homepage_difficolta"
        app:layout_constraintRight_toRightOf="@id/homepage_difficolta"
        app:srcCompat="@drawable/circle"
        android:backgroundTint="@color/black"
        app:tint="@color/black" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>