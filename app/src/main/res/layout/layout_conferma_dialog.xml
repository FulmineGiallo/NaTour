<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.dialog.ErrorDialog"
        android:background="@drawable/shape_rounded_corner"

        >

        <ImageView
            android:id="@+id/img_waringLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="168dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="168dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_icon_question_circle"
            />

        <TextView
            android:id="@+id/txt_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sei sicuro di voler confermare?"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/img_waringLogin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />

        <Button
            android:id="@+id/btn_conferma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Si"
            app:cornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_dialog"
            app:layout_constraintLeft_toLeftOf="@id/img_waringLogin"
            android:layout_marginLeft="-80dp"
            />
        <Button
            android:id="@+id/btn_annulla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No"
            app:cornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_dialog"
            app:layout_constraintRight_toRightOf="@id/img_waringLogin"
            android:layout_marginRight="-80dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
